@{
    Layout = null;
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
     
    <html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail</title>
    <script src="/js/jquery.js" type="text/javascript"></script>
</head>
<body>
        <div id="header">
            <div class="logo">
                <img src="../../image/logo.png" / alt="加载失败" class="piclogo"/>
                在线影院系统后台管理
            </div>
        </div>
    <div>

        <form id="form" action="@ViewBag.Submit" method="post" enctype="multipart/form-data">

        <table>
            <tr><td>标题</td><td><input name="Name" type="text" value="@ViewBag.Item.Name" /></td></tr>
            <tr><td>类型</td><td><select name="TypeName">
            <option value="xiju">喜剧</option>
            <option value="dongzuo">动作</option>
            <option value="aiqing">爱情</option>
            <option value="wuxia">武侠</option>
            <option value="zhanzheng">战争</option>
            <option value="kehuan">科幻</option>
            <option value="kongbu">恐怖</option>
            <option value="fanzui">犯罪</option>
            <option value="jingsong">惊悚</option>
            <option value="juqing">剧情</option>
            <option value="qita">其他</option>
            </select></td>          
            </tr>
             <tr><td>演员</td><td><input name="Actors" type="text" value="@ViewBag.Item.Actors" /></td></tr> 
             @if (ViewBag.Item.ID == 0)
             {            
             <tr><td>封面图片</td><td><input name="Img" type="file" /></td></tr>
             <tr><td>电影</td><td><input name="movie" type="file" /></td></tr>
             }
             else
             {
                 <input type="hidden" name="ID" value="@ViewBag.Item.ID" />
             }
            <tr><td>介绍</td><td><input name="Introduce" type="text" value="@ViewBag.Item.Introduce" /></td></tr>
            <tr><td>评分</td><td><input name="Score" type="text" value="@ViewBag.Item.Score" /></td></tr>
            
            <tr><td>&nbsp;</td><td> <input type="submit" id="submit" value="提 交"/></td></tr>
        </table>
        </form>
    </div>
    <script type="text/javascript">
       
    </script>
</body>
</html>
