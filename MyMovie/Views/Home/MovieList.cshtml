@{
    ViewBag.Title = "MovieList";
}
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>在线影院</title>
    <link href="/css/MovieList.css" rel="stylesheet" type="text/css" />
    
</head>
<body>
    <div id="wrap">
        <div id="header">
            <div class="logo">
                <img src="../../image/logo.png" / alt="加载失败" class="piclogo"/>
                在线影院系统
            </div>
            <div class="login">
                @if (ViewBag.username == "")
                {
                <a href="/Home/SignIn" class="signin">登陆</a>
                <a href="/Home/SignUp" class="signup">注册</a>
                    }
                else {
                    <div class="signout">
                    <span>@ViewBag.username</span>
                    <a href="/Home/LogOut">退出</a>
                    </div>
                }
            </div>
        </div>
        <div id="mainbody">
            <div class="line"></div>

                <div class="left" >
                    <ul>
                        <li><a href="/Home/Index">首页</a></li>
                        <li><a href="/Home/MovieList?name=xiju" id="xiju">喜剧</a></li>
                        <li><a href="/Home/MovieList?name=dongzuo" id="dongzuo">动作</a></li>
                        <li><a href="/Home/MovieList?name=aiqing" id="aiqing">爱情</a></li>
                        <li><a href="/Home/MovieList?name=wuxia" id="wuxia">武侠</a></li>
                        <li><a href="/Home/MovieList?name=zhanzheng" id="zhanzheng">战争</a></li>
                        <li><a href="/Home/MovieList?name=kehuan" id="kehuan">科幻</a></li>
                        <li><a href="/Home/MovieList?name=kongbu" id="kongbu">恐怖</a></li>
                        <li><a href="/Home/MovieList?name=fanzui" id="fanzui">犯罪</a></li>
                        <li><a href="/Home/MovieList?name=jingsong" id="jingsong">惊悚</a></li>
                        <li><a href="/Home/MovieList?name=juqing" id="juqing">剧情</a></li>
                        <li><a href="/Home/MovieList?name=qita" id="qita">其他</a></li>
                    </ul>
                </div>   
                <div class="right">
                    
                    <div class="movie"> 
                        <ul>
                        @foreach (var m in ViewBag.MovieList)
                        {
                            <li><div class="moviebox">
                                    <a href="/Home/MovieDetail?id=@m.ID" target="_blank" title="@m.Name">
                                        <img src="@m.MovieImg" / alt="@m.Name"/></a>
                                    <div class="movietitle"><a href="/Home/MovieDetail?id=@m.ID">@m.Name</a></div>
                                    <div class="moviesorce">@m.Score</div>
                                </div>
                            </li>
                        }
                        </ul>
                    </div> 
                </div>
            </div>
       
        <div id="footer">
            
        </div>   
    </div>
    <script src="/js/jquery.js" type="text/javascript"></script>
    <script type="text/javascript">
        $("#@ViewBag.now").addClass('now');
    </script>
 </body>
</html>
