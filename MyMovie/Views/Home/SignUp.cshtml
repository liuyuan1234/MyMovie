@{
    ViewBag.Title = "SignUp";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
    <link href="../../css/SignUp.css" rel="stylesheet" type="text/css" />
    
</head>
<body>
        <div class="logo">
            <img src="../../image/logo2.png" / alt="加载失败" class="piclogo">
                在线影院系统
            </div>
        <div id="bgp">
            <img src="../../image/login.jpg" / alt="" class="pic">
        </div>
        <div class="signup_box">
        <div class="text">请输入用户名：</div>
        <div class="input_box"><input  type="text" id="username" class="text_box"/></div>
        <div class="text">请输入密码：</div>
        <div class="input_box"><input  type="password" id="password" class="text_box"/></div>
        <div class="text">请确认密码：</div>    @*确认密码*@
        <div class="input_box"><input  type="password" id="password" class="text_box"/></div>
        <div class="SUbutton"><button id="signupBtn">注册</button></div>
            
        </div>
        <script src="/js/jquery.js" type="text/javascript"></script>
                <script>
                    $("#signupBtn").on('click', function () {
                        $.ajax({
                            url: '/Home/SignUpAjax'
                       , data: {
                           userName: $("#username").val()
                       , password: $("#password").val()
                       }
                        , type: "POST"
                       , success: function (json) {
                           //{result:1,error:""}
                           if (json.result == 1) {
                               //注册成功，跳转到登录页面
                               window.location.href = "/Home/SignIn";
                           } else {
                               alert(json.error);
                           }
                       }

                        });
                    });    
                </script>
</body>
</html>